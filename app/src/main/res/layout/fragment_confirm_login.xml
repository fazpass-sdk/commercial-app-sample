<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/bg_scaffold"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="40dp">

    <TextView
        android:id="@+id/title_txt3"
        style="@style/AppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="18pt" />

    <TextView
        android:id="@+id/greeting_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/greeting_message"
        android:textColor="@color/default_text_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/confirm_login_question"
        android:textAlignment="center"
        android:textColor="@color/default_text_color"
        android:textSize="16sp" />

    <Button
        android:id="@+id/cd_notif_btn"
        style="@style/ElevatedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Cross Device Notification" />

    <Button
        android:id="@+id/sms_ver_btn"
        style="@style/ElevatedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="SMS Verification Code" />

    <Button
        android:id="@+id/miscall_ver_btn"
        style="@style/ElevatedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Miscall Verification Code" />

    <Button
        android:id="@+id/email_ver_btn"
        style="@style/ElevatedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email Verification Code" />

    <TextView
        android:id="@+id/error_txt2"
        style="@style/ErrorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        tools:visibility="visible" />

</LinearLayout>