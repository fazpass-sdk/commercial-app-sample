<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ElevatedButton">
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="rippleColor">@color/primary_variant</item>
        <item name="backgroundTint">@color/elevated_button_bg_color</item>
        <item name="android:textColor">@color/elevated_button_text_color</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">2dp</item>
    </style>
    <style name="ToggleButtonText">
        <item name="android:background">@color/transparent</item>
    </style>
    <style name="Segment">
        <item name="android:padding">16dp</item>
        <item name="contentPadding">16dp</item>
    </style>
    <style name="TableRowItem">
        <item name="android:padding">16dp</item>
    </style>
</resources>